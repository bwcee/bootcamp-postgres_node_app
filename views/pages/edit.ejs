<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../template/head'); %>
  </head>

  <body class="container">
    <header><%- include('../template/nav'); %></header>

    <main>
      <div class="container-fluid">
        <form
          action="/note/edit/<%= noteContents.id %>?_method=PUT"
          method="POST"
        >
          <div class="form-group">
            <label for="habitat">Habitat</label><br />
            <textarea class="form-control" name="habitat" rows="5" required>
<%= noteContents.habitat %> </textarea
            >
          </div>

          <div class="form-group">
            <label for="date">Date</label><br />
            <textarea class="form-control" rows="5" name="date" required>
<%= noteContents.date %></textarea
            >
          </div>

          <div class="form-group">
            <label for="appearance">Appearance</label><br />
            <textarea class="form-control" rows="5" name="appearance" required>
<%= noteContents.appearance %></textarea
            >
          </div>

          <div class="form-group">
            <label for="behavior">Behavior</label><br />
            <textarea class="form-control" rows="5" name="behavior" required>
<%= noteContents.behavior %></textarea
            >
          </div>

          <div class="form-group">
            <label for="vocalisation">Vocalisation</label><br />
            <textarea
              class="form-control"
              rows="5"
              name="vocalisation"
              required
            >
<%= noteContents.vocalisation %></textarea
            >
          </div>

          <div class="form-group">
            <label for="flock_size">Flock Size</label><br />
            <textarea class="form-control" rows="5" name="flock_size" required>
 <%= noteContents.flock_size %></textarea
            >
          </div>

          <input
            class="btn btn-success btn-block"
            type="submit"
            value="Edit Note"
          />
        </form>
      </div>
    </main>

    <footer><%- include('../template/footer'); %></footer>
  </body>
</html>
